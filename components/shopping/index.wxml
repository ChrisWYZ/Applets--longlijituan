  <view>
  <block custom-class="q" >
    <van-nav-bar title="隆利源" >
      <van-icon  name="search" slot="right" />
    </van-nav-bar>
  </block>
  </view>
<!-- 购物车 -->
<view>
  <van-swipe-cell right-width="{{ 65 }}" left-width="{{ 65 }}">
    <van-card
        num="{{item.quantity}}"
        price="{{item.goods.price}}"
        title="{{item.goods.title}}"
        thumb="{{'https://dss1.bdstatic.com/70cFvXSh_Q1YnxGkpoWK1HF6hhy/it/u=2579472107,2950192314&fm=26&gp=0.jpg'}}"
      >
      <view slot="bottom">
        <van-stepper value="{{ number }}" bind:change="onListening" />
      </view>
    </van-card>
    <view slot="right">删除</view>
  </van-swipe-cell>
  <van-submit-bar price="{{ item.goods.price * number * 100}}" button-text="提交订单" bind:submit="onSubmit" />
</view>
